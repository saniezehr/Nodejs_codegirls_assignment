<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRUD App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container my-5">
        <h2 class="mb-4">User Management</h2>

        <!-- Add User Form -->
        <form action="/adduser" method="post" class="mb-4">
            <div class="row g-3">
                <div class="col-md-3">
                    <input type="text" class="form-control" name="name" placeholder="Name" required>
                </div>
                <div class="col-md-3">
                    <input type="email" class="form-control" name="email" placeholder="Email" required>
                </div>
                <div class="col-md-3">
                    <input type="password" class="form-control" name="password" placeholder="Password" required>
                </div>
                <div class="col-md-2">
                    <input type="number" class="form-control" name="age" placeholder="Age" required>
                </div>
                <div class="col-md-1">
                    <button type="submit" class="btn btn-primary w-100">Add</button>
                </div>
            </div>
        </form>

        <!-- Users Table -->
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Password</th>
                    <th>Age</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                <tr>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= user.password %></td>
                    <td><%= user.age %></td>
                    <td>
                        <!-- Update Form -->
                        <form action="/updateuser" method="post" class="d-inline">
                            <input type="hidden" name="id" value="<%= user._id %>">
                            <input type="text" name="name" class="form-control mb-1" value="<%= user.name %>" required>
                            <input type="email" name="email" class="form-control mb-1" value="<%= user.email %>" required>
                            <input type="password" name="password" class="form-control mb-1" value="<%= user.password %>" required>
                            <input type="number" name="age" class="form-control mb-1" value="<%= user.age %>" required>
                            <button type="submit" class="btn btn-warning btn-sm">Update</button>
                        </form>

                        <!-- Delete Form -->
                        <form action="/deleteuser" method="post" class="d-inline">
                            <input type="hidden" name="id" value="<%= user._id %>">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</button>
                        </form>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>
