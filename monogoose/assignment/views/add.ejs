
        <% users.forEach((user,index) => { %>
        
        <tr>
            <td><%=index +1 %></td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.password %></td>
            <td>
                <a href="/edit/<%= user._id %>" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i> Edit</a>
                <a href="/delete/<%= user._id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')"><i class="fas fa-trash"></i> Delete</a>
              </td>
        </tr>
        <% )} %>

      </tbody>
    </table>